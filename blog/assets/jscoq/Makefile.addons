########################################################################

MTAC_HOME=$(ADDONS_PATH)/mtac-plugin
MTAC_DEST=coq-pkgs/Mtac

MTAC_PLUG=$(MTAC_HOME)/src/mtac.cma

# XXX: Use a pattern rule!
$(MTAC_DEST):
	mkdir -p $(MTAC_DEST)

mtac: $(MTAC_DEST)
	-$(SYNC) $(MTAC_PLUG) $(MTAC_DEST)/mtac.cma
	$(SYNCVO) $(MTAC_HOME)/ $(MTAC_DEST)

